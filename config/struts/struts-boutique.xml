<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="boutique" namespace="/" extends="common">
		<action name="boutiqueAction_*" class="com.san.action.BoutiqueAction" method="{1}">
			<!-- 跳转到具体课程刷题 -->
			<result name="detail">/boutiqueDetail.jsp</result>
			
			<!-- 积分不够，跳转到积分购买界面 -->
			<result name="buyPoints">/buyPoints.jsp</result>
			
			<!-- 显示精品区信息 -->
			<result name="display">/boutique.jsp</result>
			
			<!-- 精品区下一题 -->
			<result name="nextBoutSubject">/boutiqueDetail.jsp</result>
			
			<!-- 具体题目,开始刷题 -->
			<result name="detailSubject"></result>
			
			<!--  -->
			<result name=""></result>
			
			<!-- 提交答案处理 -->
			<result name="answerCl"></result>
		</action>
	</package>
</struts>